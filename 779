    Title = "Target Mode",
    Description = "Choose how to select targets.",
    Values = {"Nearest", "Lowest Health", "Highest Level", "Random", "Boss Only"},
    Default = "Nearest",
    Flag = "TargetMode",
    Callback = function(selected)
        print("Target Mode:", selected)
    end
})

-- Dropdown with search
CombatSection:AddDropdown({
    Title = "Weapon Select",
    Description = "Choose your weapon.",
    Values = {"Sword", "Axe", "Bow", "Staff", "Dagger", "Hammer", "Spear", "Scythe"},
    Default = "Sword",
    Searchable = true,  -- Enables search box
    Flag = "Weapon",
    Callback = function(selected)
        print("Weapon:", selected)
    end
})

-- Multi-select dropdown
CombatSection:AddDropdown({
    Title = "Attack Types",
    Description = "Select which attacks to use.",
    Values = {"Melee", "Ranged", "Magic", "Ultimate", "Combo", "AOE"},
    Default = {"Melee", "Ranged"},  -- Default is a table for multi-select
    MultiSelect = true,
    Flag = "AttackTypes",
    Callback = function(selected)
        print("Attack Types:", table.concat(selected, ", "))
    end
})

CombatSection:AddSeparator({Text = "Auto Features"})

CombatSection:AddToggle({
    Title = "Auto Attack",
    Description = "Automatically attack nearby enemies.",
    Default = false,
    Flag = "AutoAttack",
    Callback = function(enabled)
        print("Auto Attack:", enabled)
    end
})

CombatSection:AddToggle({
    Title = "Kill Aura",
    Default = false,
    Flag = "KillAura",
    Callback = function(enabled)
        print("Kill Aura:", enabled)
    end
})

-- Keybind
CombatSection:AddKeybind({
    Title = "Kill Aura Toggle Key",
    Description = "Press this key to toggle kill aura.",
    Default = Enum.KeyCode.K,
    Flag = "KillAuraKey",
    Callback = function()
        -- This fires when the key is pressed
        local currentState = UltraUI:GetFlag("KillAura")
        if currentState then
            currentState:Set(not currentState:Get())
        end
        print("Kill Aura toggled via keybind!")
    end,
    ChangedCallback = function(newKey)
        -- This fires when the keybind is changed
        print("Kill Aura key changed to:", newKey.Name)
    end
})

-- Input field
CombatSection:AddInput({
    Title = "Target Player",
    Description = "Enter username to target specific player.",
    Placeholder = "Enter username...",
    CharLimit = 20,
    Flag = "TargetPlayer",
    Callback = function(value, enterPressed)
        if enterPressed and value ~= "" then
            print("Targeting player:", value)
            UltraUI:Notify({
                Title = "Target Set",
                Content = "Now targeting: " .. value,
                Duration = 2,
                Type = "Info"
            })
        end
    end
})

-- Numeric input
CombatSection:AddInput({
    Title = "Attack Range",
    Placeholder = "Enter range...",
    Default = "50",
    NumericOnly = true,  -- Only allows numbers
    Flag = "AttackRange",
    Callback = function(value)
        print("Attack Range:", value)
    end
})

