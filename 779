-- ═══════════════════════════════════════════════════════════════════════════════
--[[

-- Update dropdown values dynamically
local weaponDropdown = UltraUI:GetFlag("Weapon")
if weaponDropdown and weaponDropdown.SetValues then
    weaponDropdown:SetValues({"New Sword", "New Axe", "New Bow"})
end

-- Update label text
-- Note: You'd need to store the label reference when creating it
local myLabel = PlayerSection:AddLabel({
    Title = "Status: Idle",
    Description = "Waiting for action..."
})
-- Later...
myLabel:Set("Status: Active", "Currently farming Zone 3")

]]

