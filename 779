-- ═══════════════════════════════════════════════════════════════════════════════
-- CUSTOM THEME EXAMPLE
-- ═══════════════════════════════════════════════════════════════════════════════
--[[

-- Create your own custom theme
UltraUI:SetTheme({
    Background = Color3.fromRGB(20, 20, 30),
    BackgroundSecondary = Color3.fromRGB(30, 30, 45),
    BackgroundTertiary = Color3.fromRGB(40, 40, 60),
    
    Accent = Color3.fromRGB(255, 100, 200),
    AccentDark = Color3.fromRGB(200, 70, 160),
    AccentLight = Color3.fromRGB(255, 150, 220),
    
    Text = Color3.fromRGB(255, 255, 255),
    TextDark = Color3.fromRGB(200, 200, 210),
    TextMuted = Color3.fromRGB(130, 130, 150),
    
    Border = Color3.fromRGB(70, 70, 90),
    BorderLight = Color3.fromRGB(90, 90, 120),
    
    Success = Color3.fromRGB(100, 255, 150),
    Warning = Color3.fromRGB(255, 200, 100),
    Error = Color3.fromRGB(255, 100, 100),
    Info = Color3.fromRGB(100, 180, 255),
    
    Glow = Color3.fromRGB(255, 100, 200),
})

