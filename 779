-- ═══════════════════════════════════════════════════════════════════════════════
-- ACCESSING FLAGS (Examples)
-- ═══════════════════════════════════════════════════════════════════════════════
--[[

-- METHOD 1: Get flag object and use Get/Set
local walkSpeedFlag = UltraUI:GetFlag("WalkSpeed")
if walkSpeedFlag then
    local currentValue = walkSpeedFlag:Get()  -- Get current value
    print("Current walk speed:", currentValue)
    
    walkSpeedFlag:Set(100)  -- Set new value
end

-- METHOD 2: Use SetFlag directly
UltraUI:SetFlag("WalkSpeed", 150)
UltraUI:SetFlag("AutoFarm", true)
UltraUI:SetFlag("TargetMode", "Lowest Health")
UltraUI:SetFlag("AttackTypes", {"Melee", "Magic", "Ultimate"})
UltraUI:SetFlag("EnemyColor", Color3.fromRGB(255, 100, 100))

-- Get values from different element types
local autoFarm = UltraUI:GetFlag("AutoFarm"):Get()      -- boolean
local walkSpeed = UltraUI:GetFlag("WalkSpeed"):Get()    -- number
local targetMode = UltraUI:GetFlag("TargetMode"):Get()  -- string
local attacks = UltraUI:GetFlag("AttackTypes"):Get()    -- table (multi-select)
local color = UltraUI:GetFlag("EnemyColor"):Get()       -- Color3
local key = UltraUI:GetFlag("KillAuraKey"):Get()        -- Enum.KeyCode

]]

