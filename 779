-- ═══════════════════════════════════════════════════════════════════════════════
-- LOAD THE ULTRA UI LIBRARY
-- ═══════════════════════════════════════════════════════════════════════════════
local UltraUI = loadstring(game:HttpGet("https://pastefy.app/0le4IAKF/raw"))()

-- ═══════════════════════════════════════════════════════════════════════════════
-- CONFIGURATION (Optional - Set before creating window)
-- ═══════════════════════════════════════════════════════════════════════════════

-- Change theme (Options: Obsidian, Cyberpunk, Aurora, Sunset, Forest, Void)
UltraUI:SetTheme("Cyberpunk")

-- Configure settings
UltraUI:EnableSounds(true)        -- Enable UI sounds
UltraUI:EnableAnimations(true)    -- Enable smooth animations
UltraUI:EnableGlow(true)          -- Enable glow effects
UltraUI:SetToggleKey(Enum.KeyCode.RightControl)  -- Key to hide/show UI

-- ═══════════════════════════════════════════════════════════════════════════════
-- CREATE MAIN WINDOW
-- ═══════════════════════════════════════════════════════════════════════════════
local Window = UltraUI:CreateWindow({
    Title = "Ultra Script Hub",
    Subtitle = "v2.0 | Premium Edition",
    Size = UDim2.fromOffset(550, 650),
    Position = UDim2.new(0.5, -275, 0.5, -325),
    Icon = "Crown"  -- Available: Crown, Star, Heart, Fire, Lightning, Settings, Home, etc.
})

-- ═══════════════════════════════════════════════════════════════════════════════
-- TAB 1: MAIN FEATURES
-- ═══════════════════════════════════════════════════════════════════════════════
local MainTab = Window:AddTab({
    Name = "Main",
    Icon = "Home"
})

-- Section: Player Features
local PlayerSection = MainTab:AddSection({
    Name = "Player Features",
    Icon = "User",
    Opened = true  -- Section starts expanded
})

-- Label with icon and description
PlayerSection:AddLabel({
    Title = "Welcome to Ultra Hub!",
    Description = "The most premium script hub available.",
    Icon = "Heart"
})

-- Separator with text
PlayerSection:AddSeparator({Text = "Movement"})

-- Toggle with description
PlayerSection:AddToggle({
    Title = "Infinite Jump",
    Description = "Jump unlimited times in the air.",
    Default = false,
    Flag = "InfiniteJump",  -- Use flags to access values later
    Callback = function(enabled)
        print("Infinite Jump:", enabled)
        
        if enabled then
            UltraUI:Notify({
                Title = "Infinite Jump",
                Content = "You can now jump infinitely!",
                Duration = 3,
                Type = "Success"  -- Success, Warning, Error, Info
            })
        end
    end
})

-- Simple toggle (no description)
PlayerSection:AddToggle({
    Title = "No Clip",
    Default = false,
    Flag = "NoClip",
    Callback = function(enabled)
        print("No Clip:", enabled)
    end
})

-- Slider with suffix
PlayerSection:AddSlider({
    Title = "Walk Speed",
    Description = "Adjust your walking speed.",
    Min = 16,
    Max = 500,
    Default = 16,
    Increment = 1,
    Suffix = " studs/s",
    Flag = "WalkSpeed",
    Callback = function(value)
        local player = game.Players.LocalPlayer
        if player.Character and player.Character:FindFirstChild("Humanoid") then
            player.Character.Humanoid.WalkSpeed = value
        end
    end
})

-- Slider without description
PlayerSection:AddSlider({
    Title = "Jump Power",
    Min = 50,
    Max = 500,
    Default = 50,
    Increment = 10,
    Flag = "JumpPower",
    Callback = function(value)
        local player = game.Players.LocalPlayer
        if player.Character and player.Character:FindFirstChild("Humanoid") then
            player.Character.Humanoid.JumpPower = value
        end
    end
})

-- Simple separator (no text)
PlayerSection:AddSeparator()

-- Button with icon and description
PlayerSection:AddButton({
    Title = "Teleport to Spawn",
    Description = "Instantly teleport to spawn point.",
    Icon = "Home",
    Callback = function()
        local player = game.Players.LocalPlayer
        if player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
            player.Character.HumanoidRootPart.CFrame = CFrame.new(0, 50, 0)
            
            UltraUI:Notify({
                Title = "Teleported!",
                Content = "You have been teleported to spawn.",
                Duration = 2,
                Type = "Success"
            })
        end
    end
})

-- Simple button
PlayerSection:AddButton({
    Title = "Reset Character",
    Callback = function()
        local player = game.Players.LocalPlayer
        if player.Character and player.Character:FindFirstChild("Humanoid") then
            player.Character.Humanoid.Health = 0
        end
    end
})

